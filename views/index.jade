extends layout

block content
  div(class="homepage")
    div(class="top container")
      h1 Welcome to Read It!
      h2 Book reviews and discussion
    if (!user)
      a(href="/login") Login
      br
      a(href="/register") Register
    if (user)
      p You are currently logged in as #{user.username}
      a(href="/logout") Logout

    <!-- Button trigger modal -->
    div(class="container clearfix")
      button(type="button" class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal" id="addBook") Add Book
